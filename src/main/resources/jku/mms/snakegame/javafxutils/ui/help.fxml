<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="jku.mms.snakegame.HelpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Help" style="-fx-font-weight: bold; -fx-font-size: 15pt; -fx-text-fill: #AAD751"/>
    <Label text="Controls: "  style="-fx-font-weight: bold; -fx-font-size: 12pt;"></Label>
    <Label text="W - UP"></Label>
    <Label text="S - DOWN"></Label>
    <Label text="A - LEFT"></Label>
    <Label text="D - RIGHT"></Label>

    <Button text="Back to menu" onAction="#onBackToMenuButtonClick"/>
</VBox>
