<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.canvas.Canvas?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="10"
      fx:controller="jku.mms.snakegame.SingleplayerController">
    <HBox alignment="CENTER" spacing="50">
        <HBox style="-fx-font-weight: bold; -fx-font-size: 13pt;">
            <Label text="Score: "/>
            <Label fx:id="scoreLabel"/>
        </HBox>
        <HBox fx:id="currentEffectsList" style="-fx-font-weight: bold; -fx-font-size: 10pt;" spacing="10"></HBox>
        <HBox style="-fx-font-weight: bold; -fx-font-size: 13pt;">
            <Label text="Time: "/>
            <Label fx:id="timeLabel"/>
        </HBox>
    </HBox>
    <HBox alignment="CENTER">
        <Canvas fx:id="gameCanvas"/>
    </HBox>
</VBox>
