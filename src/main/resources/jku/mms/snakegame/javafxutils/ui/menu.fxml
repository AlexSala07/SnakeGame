<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="jku.mms.snakegame.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to SnakeGame!" style="-fx-font-weight: bold; -fx-font-size: 15pt; -fx-text-fill: #AAD751"/>
    <Button text="Singleplayer" onAction="#onStartSinglePlayerButtonClick"/>
<!--    <Button text="Multiplayer" onAction="#onStartMultiPlayerButtonClick"/>-->
    <Button text="Help" onAction="#onHelpButtonClick"/>
    <Button text="Exit" onAction="#onExitGameButtonClick"/>

    <Button onAction="#onMuteButtonClick" fx:id="muteButton"/>
</VBox>
